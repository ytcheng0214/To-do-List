<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TodoApp2.MainWindow"
        Title="To-Do List"
        Width="400" Height="500">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        
        <!-- title -->
        <TextBlock Text="To-Do List" FontSize="20" FontWeight="Bold" Margin="0,10,0,10" HorizontalAlignment="Center"/>
        
        <!-- input -->
        <TextBox x:Name="NewTaskInput" Width="300" Margin="10" Watermark="Enter a task..."/>

        <!-- button -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="AddTaskButton" Content="Add" Width="80" Margin="5"/>
            <Button x:Name="RemoveTaskButton" Content="Remove" Width="80" Margin="5"/>
        </StackPanel>
        
        <!-- task list -->
        <ListBox x:Name="TaskList" Width="300" Height="250" Margin="10"/>
        
    </StackPanel>
</Window>